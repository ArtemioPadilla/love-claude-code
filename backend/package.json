    "@aws-sdk/client-cognito-identity-provider": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-ecs": "^3.844.0",
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "@aws-sdk/client-lambda": "^3.844.0",
