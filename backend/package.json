{
  "name": "@love-claude-code/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:ws": "tsx watch src/websocket-server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:ws": "node dist/websocket-server.js",
    "test": "vitest",
    "test:providers": "vitest tests/providers",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "mcp:provider": "tsx src/mcp/provider-server.ts",
    "mcp:provider:build": "tsc --outDir dist src/mcp/provider-server.ts",
    "test:mcp": "vitest tests/mcp"
  },
