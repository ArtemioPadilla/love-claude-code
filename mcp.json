{
  "mcpServers": {
    "love-claude-code-ui": {
      "command": "node",
      "args": ["./mcp-server/dist/index.js"],
      "env": {
        "NODE_ENV": "development",
        "MCP_UI_TARGET_URL": "http://localhost:3000",
        "MCP_UI_HEADLESS": "false"
      }
    },
    "love-claude-code-providers": {
      "command": "npx",
      "args": ["tsx", "./backend/src/mcp/provider-server.ts"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "playwright-automation": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-playwright"],
      "env": {
        "PLAYWRIGHT_HEADLESS": "false",
        "PLAYWRIGHT_BROWSER": "chromium",
        "PLAYWRIGHT_TIMEOUT": "30000"
      },
      "description": "Playwright browser automation for E2E testing and UI validation"
    }
  }
}